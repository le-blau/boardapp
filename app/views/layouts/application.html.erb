<!DOCTYPE html>
<html>
  <head>
    <title>Board</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-normal"><%= link_to("Board", "/") %></h5>

      <nav class="my-2 my-md-0 mr-md-3">
        <% if session[:user_id] %>
          <%= session[:user_id] %>
          <a class="p-2 text-dark" href="#"><%= link_to("新規投稿", "/posts/new") %></a>
          <a class="p-2 text-dark" href="#"><%= link_to("投稿一覧", "/posts/index") %></a>
          <a class="p-2 text-dark" href="#"><%= link_to("ユーザー一覧", "/users/index") %></a>
          <%= link_to("Logout", "/logout", {method: :post, class: "btn btn-outline-primary"}) %>
        <% else %>
          <a class="p-2 text-dark" href="#"><%= link_to("Boardについて", "/about") %></a>
          <a class="btn btn-outline-primary" href="/login">Login</a>
          <a class="btn btn-outline-primary" href="/users/new">Sign Up</a>
        <% end %>      
      </nav>

    </div>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <div class="container">
      <%= yield %>
    </div>

  </body>
</html>